<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberVerification">
    <include layout="@layout/ride_up_circle_logo"
        android:id="@+id/ivrideuplogo"/>

    <TextView
        android:id="@+id/tv_verify_your_phone"
        android:layout_below="@id/ivrideuplogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your phone"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_number_with_code"
        android:layout_below="@id/tv_verify_your_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number with code"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_we_will_send_you_a_code"
        android:layout_below="@id/tv_number_with_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'll send you a code it helps keep your"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/tv_account_secure"
        android:layout_below="@id/tv_we_will_send_you_a_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="account secure"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_your_phone_number"
        android:layout_below="@id/tv_account_secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Phone number"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/llphonenumber"
        android:layout_below="@id/tv_your_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_transparent_border">


            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flag"/>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:inputType="number"
                android:background="@drawable/background_transparent_border"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/b_verify_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Verify OTP"
        android:layout_margin="10dp"
        android:backgroundTint="@color/mor"

        />



</RelativeLayout>