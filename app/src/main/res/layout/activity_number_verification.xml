<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    tools:context=".view.NumberVerification">

    <include
        android:id="@+id/ivrideuplogo"
        layout="@layout/ride_up_circle_logo" />

    <TextView
        android:id="@+id/tv_verify_your_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivrideuplogo"
        android:layout_marginLeft="@dimen/_5ssp"
        android:fontFamily="@font/sansmedium"
        android:text="Verify your phone"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_number_with_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_verify_your_phone"
        android:layout_marginLeft="@dimen/_5ssp"
        android:fontFamily="@font/sansmedium"
        android:text="number with code"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_we_will_send_you_a_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_number_with_code"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:text="We'll send you a code it helps keep your"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_account_secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_we_will_send_you_a_code"
        android:layout_marginLeft="@dimen/_5ssp"
        android:text="account secure"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_your_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_account_secure"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginTop="14dp"
        android:text="Your Phone number"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_your_phone_number"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_transparent_border"
            android:orientation="horizontal"
            android:padding="@dimen/_5ssp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:src="@drawable/flag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:text="+91" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:background="@drawable/background_transparent_border"
                android:hint="Phone number"
                android:inputType="number"
                android:padding="@dimen/_7ssp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_verify_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/background_solidcolor_bordr"
        android:backgroundTint="@color/mor"
        android:text="Verify OTP"
        android:textColor="@color/white"
        />


</RelativeLayout>