<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatingTabLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/iv_personimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personimage" />

        <TextView
            android:id="@+id/tv_personname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/iv_personimage"
            android:fontFamily="@font/sansbold"
            android:text="Rocks Velkeinjen"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/sansregular"
            android:text="10 Feb"

            />

        <RatingBar
            android:id="@+id/rb_ratingbar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personname"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_personimage"
            android:isIndicator="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_ratingbar"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/iv_personimage"
            android:fontFamily="@font/sansregular"
            android:text="Cinemas is the ultimate experience to see new movies in Gold Class or Vmax. Find a cinema near you."
            android:textStyle="bold"/>
    </RelativeLayout>

</FrameLayout>