<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    tools:context=".PaymentOptions"
    android:background="@color/white">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/iv_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_paymentoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/iv_arrow_back"
        android:text="Payment Options"
        android:textStyle="bold" />

    <ScrollView
        android:layout_above="@id/b_proceedtopay"
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_paymentoption">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Toyota Glanza"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12sp"
                                android:text="Indore "
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_jeep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10sp"
                                android:src="@drawable/jeep" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Vijay Nagar, Indore, Madhya..."
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="05:00 PM - 06:00 AM"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="10sp"
                                android:text="Details"
                                android:textColor="@color/mor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="12sp"
                                android:text="Bhopal"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:text="Vijay Nagar, Indore...."
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_passangerdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Passenger Details"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_passangerdetail"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:id="@+id/passenger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="Mr. Tej pratp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="10sp"
                            android:text="Edit"
                            android:textColor="@color/mor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="10sp"
                            android:text="21yrs . Seat 3B" />


                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_3"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/cv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/offers"/>

                <TextView
                    android:layout_toRightOf="@id/iv_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offers"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrowright"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit &amp; Debit Cards"
                android:layout_below="@id/cv_3"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_4"
                android:layout_below="@id/tv_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_axis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView

                        android:layout_marginTop="10dp"
                        android:id="@+id/iv_axis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/axis"/>
                    
                    <TextView
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@id/iv_axis"
                        android:layout_width="wrap_content"
                        android:text="Axis Bank **** **** **** 8395"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:layout_width="53dp"
                        android:layout_height="47dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_hdfc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_axis">
                    <ImageView
                        android:layout_marginTop="20sp"
                        android:id="@+id/iv_hdfc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hdfc"
                        />

                    <TextView
                        android:layout_marginTop="20sp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HDFC Bank **** **** **** 6246"
                        android:layout_toRightOf="@id/iv_hdfc"
                        android:layout_marginLeft="10sp"
                        />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/rl_hdfc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/addnewcard"/>

                        <TextView
                            android:layout_toRightOf="@id/ivadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add New Card"
                            android:layout_marginLeft="10sp"
                            android:textSize="13sp"
                            />





                    </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_upi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:layout_below="@id/cv_4"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"/>









            <androidx.cardview.widget.CardView
                android:id="@+id/cv_5"
                android:layout_below="@id/tv_upi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_googlepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_marginTop="10dp"
                            android:id="@+id/iv_gp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/googlepay"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10sp"
                            android:layout_toRightOf="@id/iv_gp"
                            android:layout_width="wrap_content"
                            android:text="Google Pay"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_phonepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_googlepay">
                        <ImageView
                            android:layout_marginTop="20sp"
                            android:id="@+id/iv_pp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/phonepay"
                            />

                        <TextView
                            android:layout_marginTop="20sp"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PhonePe"
                            android:layout_toRightOf="@id/iv_pp"
                            android:layout_marginLeft="10sp"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/rl_phonepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivaddupi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/addnewcard"/>

                        <TextView
                            android:layout_toRightOf="@id/ivaddupi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add New UPI ID"
                            android:layout_marginLeft="10sp"
                            android:textSize="13sp"
                            />





                    </RelativeLayout>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_moreoption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Payment Options"
                android:layout_below="@id/cv_5"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"/>




            <androidx.cardview.widget.CardView
                android:id="@+id/cv_6"
                android:layout_below="@id/tv_moreoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_marginTop="10dp"
                            android:id="@+id/iv_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wallet"/>

                        <TextView
                            android:textSize="13sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10sp"
                            android:layout_toRightOf="@id/iv_wallet"
                            android:layout_width="wrap_content"
                            android:text="Wallet"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:src="@drawable/arrowright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_netbanking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_wallet">
                        <ImageView
                            android:layout_marginTop="20sp"
                            android:id="@+id/iv_netbanking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/netbanking"
                            />

                        <TextView
                            android:layout_marginTop="20sp"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Banking"
                            android:layout_toRightOf="@id/iv_netbanking"
                            android:layout_marginLeft="10sp"
                            />
                        <ImageView
                            android:src="@drawable/arrowright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/rl_netbanking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivcashdeleivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/addnewcard"
                            android:layout_marginBottom="20dp"/>

                        <TextView
                            android:layout_toRightOf="@id/ivcashdeleivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash on Delivery"
                            android:layout_marginLeft="10sp"
                            android:textSize="13sp"
                            android:layout_marginBottom="20sp"
                            />





                    </RelativeLayout>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>









        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/b_proceedtopay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:text="Proceed to Pay"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/ll_rupess"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹6,699"
            android:textStyle="bold"
            android:layout_marginRight="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View detailed bill "
            android:textStyle="bold"
            android:textColor="@color/mor"
            android:layout_marginRight="20sp"/>


    </LinearLayout>

</RelativeLayout>