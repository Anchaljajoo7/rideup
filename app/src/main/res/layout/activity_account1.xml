<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Account1">
<RelativeLayout
android:id="@+id/rl_myprofile"
    android:backgroundTint="@color/mor"
    android:background="@drawable/background_solidcolor_bordr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/ivarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrow_back"
        app:tint="@color/white" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivarrow"
        android:fontFamily="@font/dmsans_medium500"
        android:text="My profile"
        android:textSize="20sp"
       />

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/tv_myprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myprofile"/>


        <LinearLayout

android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dmsans_medium500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashfak Sayem"
                />

            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/dmsans_medium500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+9109876543"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/_30sdp"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editprofile"

                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_myprofile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_mybooking"
        android:layout_marginTop="@dimen/_20sdp"

        android:backgroundTint="@color/mor"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myorder"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppinsregular"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Order"/>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/offer"
            app:tint="@color/mor" />
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Voucher"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Methods"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/invite"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Friends"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myorders"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Order"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"/>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"/>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"
            app:tint="@color/mor" />
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/dmsans_medium500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
         />
    </LinearLayout>

</LinearLayout>






    </RelativeLayout>