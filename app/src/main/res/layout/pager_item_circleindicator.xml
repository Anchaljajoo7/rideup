<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
  >

    <ImageView
        android:id="@+id/iv_rideup"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/rideup1"
        android:layout_centerHorizontal="true"
        />
    <TextView
android:fontFamily="@font/dmsans_medium500"
        android:id="@+id/tv_welcome_trident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Welcome to trident taxi \nride share service"
        android:textSize="25sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/iv_rideup"
        android:layout_marginTop="30sp"/>


    <TextView
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_by_comparing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By comparing all the major ride  options \nin one free app"
        android:textSize="15sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/tv_welcome_trident"
        />




</RelativeLayout>