<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingList">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mor"
        app:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">
<ImageView

    android:id="@+id/iv_arrow_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/arrow_back"
    app:tint="@color/white" />
        
        <TextView
            android:id="@+id/tv_indorebhopal"
            android:layout_toRightOf="@id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indore - Bhopal"
            android:layout_marginLeft="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_toRightOf="@id/tv_indorebhopal"/>

            <TextView
                android:layout_below="@id/tv_indorebhopal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu,12 October"
                android:textColor="@color/white"
                android:layout_marginLeft="32dp" />

            <ImageView
                android:id="@+id/iv_edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit1"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"/>


</RelativeLayout>

    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_marginLeft="5sp"
    android:id="@+id/ll_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/cv"
    android:layout_marginTop="20dp"
    android:background="@drawable/background_transparent_border"
    android:padding="8dp">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/filter"
   />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:layout_marginLeft="5sp"
        />
</LinearLayout>

    <TextView
        android:id="@+id/tv_most_popular"
        android:layout_below="@id/cv"
        android:layout_toRightOf="@id/ll_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sort: Most popular"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_transparent_border"
        android:padding="8dp"
        android:layout_marginLeft="5sp"/>

    <TextView
        android:id="@+id/tv_single_seat"
        android:layout_below="@id/cv"
        android:layout_toRightOf="@id/tv_most_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Seat"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_transparent_border"
        android:padding="8dp"
        android:layout_marginLeft="5sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/tv_single_seat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvrecyclerview"/>



</RelativeLayout>